@model videotheque.ViewModels.StockViewModel

<style>
    body {
        background-color: #1a1a3c;
        color: #fff;
    }

    .form-container {
        background: linear-gradient(145deg, #1f1f45, #171736);
        border-radius: 15px;
        padding: 2rem;
        box-shadow: 8px 8px 16px #13132b, -8px -8px 16px #212149;
    }

    .form-control {
        background: linear-gradient(145deg, #1f1f45, #171736);
        border: none;
        border-radius: 10px;
        color: #fff;
        padding: 0.8rem;
        box-shadow: inset 4px 4px 8px #13132b, inset -4px -4px 8px #212149;
    }

        .form-control:focus {
            background: linear-gradient(145deg, #1f1f45, #171736);
            color: #fff;
            box-shadow: inset 6px 6px 12px #13132b, inset -6px -6px 12px #212149;
        }

    .form-label {
        color: #a8a8a8;
        font-weight: 500;
        text-shadow: 1px 1px 2px #13132b;
        margin-bottom: 0.5rem;
    }

    .btn {
        border: none;
        border-radius: 15px;
        padding: 0.7rem 1.5rem;
        transition: all 0.3s ease;
    }

    .btn-primary {
        background: linear-gradient(145deg, #7665f0, #6351cb);
        box-shadow: 4px 4px 8px #13132b, -4px -4px 8px #212149;
    }

        .btn-primary:hover {
            background: linear-gradient(145deg, #6351cb, #5442bc);
            box-shadow: inset 4px 4px 8px #4a3aa3, inset -4px -4px 8px #7c68f3;
        }

    .btn-secondary {
        background: linear-gradient(145deg, #2d2d63, #252554);
        box-shadow: 4px 4px 8px #13132b, -4px -4px 8px #212149;
    }

        .btn-secondary:hover {
            background: linear-gradient(145deg, #252554, #1e1e45);
            box-shadow: inset 4px 4px 8px #1a1a3c, inset -4px -4px 8px #2d2d63;
        }

    .btn-danger {
        background: linear-gradient(145deg, #dc3545, #bb2d3b);
        box-shadow: 4px 4px 8px #13132b, -4px -4px 8px #212149;
    }

        .btn-danger:hover {
            background: linear-gradient(145deg, #bb2d3b, #a52631);
            box-shadow: inset 4px 4px 8px #8f212a, inset -4px -4px 8px #dc3545;
        }

    .page-title {
        color: #fff;
        text-shadow: 2px 2px 4px #13132b;
        margin-bottom: 2rem;
    }

    select.form-control {
        appearance: none;
        background-image: url("data:image/svg+xml;charset=UTF-8,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 24 24' fill='none' stroke='%23a8a8a8' stroke-width='2' stroke-linecap='round' stroke-linejoin='round'%3e%3cpolyline points='6 9 12 15 18 9'%3e%3c/polyline%3e%3c/svg%3e");
        background-repeat: no-repeat;
        background-position: right 1rem center;
        background-size: 1em;
    }
</style>

<div class="container py-4">
    <h2 class="page-title fw-bolder">MODIFIER LE FILM</h2>

    <div class="form-container">
        <form asp-controller="Stock" asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="row">
                <div class="col-md-6 mb-4">
                    <label asp-for="Titre" class="form-label">Titre</label>
                    <input asp-for="Titre" class="form-control" required>
                </div>

                <div class="col-md-6 mb-4">
                    <label asp-for="Realisateur" class="form-label">Réalisateur</label>
                    <input asp-for="Realisateur" class="form-control" required>
                </div>

                <div class="col-md-6 mb-4">
                    <label asp-for="AnneeSortie" class="form-label">Année de sortie</label>
                    <input asp-for="AnneeSortie" type="number" class="form-control" required>
                </div>

                <div class="col-md-6 mb-4">
                    <label asp-for="DureeMinutes" class="form-label">Durée (minutes)</label>
                    <input asp-for="DureeMinutes" type="number" class="form-control" required>
                </div>

                <div class="col-12 mb-4">
                    <label asp-for="Synopsis" class="form-label">Synopsis</label>
                    <textarea asp-for="Synopsis" class="form-control" rows="3" required></textarea>
                </div>

                <div class="col-md-6 mb-4">
                    <label asp-for="ImageUrl" class="form-label">URL de l'image</label>
                    <input asp-for="ImageUrl" type="url" class="form-control">
                </div>

                <div class="col-md-6 mb-4">
                    <label asp-for="TrailerUrl" class="form-label">iframe de la bande-annonce</label>
                    <input asp-for="TrailerUrl" type="text" class="form-control">
                </div>

                <div class="col-md-6 mb-4">
                    <label asp-for="CategorieId" class="form-label">Catégorie</label>
                    <select asp-for="CategorieId" class="form-control" required>
                        @foreach (var categorie in ViewBag.Categories)
                        {
                            <option value="@categorie.Id">@categorie.Nom</option>
                        }
                    </select>
                </div>

                <div class="col-md-6 mb-8">
                 
                </div>

                <div class="col-md-3 mb-4">
                    <label asp-for="Prix24h" class="form-label">Prix 24h</label>
                    <input asp-for="Prix24h" type="number" step="0.01" class="form-control" required>
                </div>

                <div class="col-md-3 mb-4">
                    <label asp-for="Prix48h" class="form-label">Prix 48h</label>
                    <input asp-for="Prix48h" type="number" step="0.01" class="form-control" required>
                </div>

                <div class="col-md-3 mb-4">
                    <label asp-for="Prix72h" class="form-label">Prix 72h</label>
                    <input asp-for="Prix72h" type="number" step="0.01" class="form-control" required>
                </div>

                <div class="col-md-3 mb-4">
                    <label asp-for="Prix1Semaine" class="form-label">Prix 1 semaine</label>
                    <input asp-for="Prix1Semaine" type="number" step="0.01" class="form-control" required>
                </div>
            </div>

            <div class="mt-4 ">
                <div class="d-flex gap-3  justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">Retour</a>
                    <button type="submit" class="btn btn-primary">Enregistrer</button>
                </div>
            </div>
        </form>

        <form asp-controller="Stock" asp-action="Delete" method="post" class="d-flex justify-content-center mt-5">
            <input type="hidden" name="id" value="@Model.Id" />
            <button type="submit" class="btn btn-danger"
                    onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce film ?')">
                Supprimer le film
            </button>
        </form>
    </div>
   
</div>