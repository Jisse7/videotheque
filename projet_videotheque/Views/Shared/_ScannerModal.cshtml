@* _ScannerModal.cshtml *@
<div class="modal fade" id="scannerModal" tabindex="-1" aria-labelledby="scannerModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="scannerModalLabel">Scanner un DVD</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div id="scanner-container">
                    <video id="video-preview" autoplay muted playsinline style="border: 1px solid #ccc; width: 100%; height: 300px;"></video>
                </div>
                <div id="result-container" class="mt-3">
                    <h6>Résultat du scan :</h6>
                    <p id="scan-result" class="mb-2">En attente du scan...</p>
                    <div id="dvd-info" style="display: none;">
                        <div class="alert alert-info">
                            <h6 class="dvd-title mb-2"></h6>
                            <p class="dvd-status mb-0"></p>
                        </div>
                        <div class="mt-3">
                            <form id="updateDvdStatusForm" method="post">
                                <input type="hidden" id="exemplaireDvdId" name="exemplaireDvdId" />
                                <button type="submit" class="btn-stock-change" id="toggleStatusButton"></button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>