<style>
    body {
        background-color: #1a1a3a;
        color: white;
     
    }

    .accordion-item {
        background: linear-gradient(145deg, #1f1f45, #171736);
        border: none;
        margin-bottom: 15px;
        border-radius: 15px !important;
        box-shadow: 8px 8px 16px #13132b, -8px -8px 16px #212149;
    }

    .accordion-button {
        background: linear-gradient(145deg, #1f1f45, #171736);
        color: white;
        border-radius: 15px !important;
        box-shadow: none;
    }

        .accordion-button:not(.collapsed) {
            background: linear-gradient(145deg, #1f1f45, #171736);
            color: white;
        }

        .accordion-button::after {
            filter: invert(1);
        }

    .accordion-body {
        background: #1a1a3a;
        border-bottom-left-radius: 15px;
        border-bottom-right-radius: 15px;
    }

    .list-group-item {
        background: linear-gradient(145deg, #1f1f45, #171736);
        color: white;
        border: none;
        margin-bottom: 8px;
        border-radius: 10px;
        box-shadow: 4px 4px 8px #13132b, -4px -4px 8px #212149;
    }

    .ranking-number {
        background: #6c5ce7;
        color: white;
        width: 30px;
        height: 30px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
        box-shadow: 2px 2px 4px #13132b;
    }

    .profile-btn {
        background: #2d2d5a;
        color: white;
        border: none;
        border-radius: 8px;
        padding: 5px 15px;
        font-size: 0.9em;
        box-shadow: 3px 3px 6px #13132b;
        transition: all 0.3s ease;
    }

        .profile-btn:hover {
            transform: translateY(-2px);
            box-shadow: 4px 4px 8px #13132b;
            background: #353570;
            color: white;
        }

    .date-info {
        color: #a8a8a8;
        font-size: 0.9em;
    }

    .score-badge {
        background: #2d2d5a;
        color: white;
        padding: 3px 10px;
        border-radius: 8px;
        font-size: 0.8em;
    }

    /* Modal styles */
    .modal-content {
        background: linear-gradient(145deg, #1f1f45, #171736);
        color: white;
        border-radius: 15px;
        box-shadow: 8px 8px 16px #13132b, -8px -8px 16px #212149;
    }

    .modal .list-group-item {
        padding: 15px;
        margin-bottom: 10px;
    }

    .info-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .info-label {
        color: #a8a8a8;
        font-size: 0.9em;
    }

    .stat-item {
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 10px 20px;
        background: #2d2d5a;
        border-radius: 10px;
        box-shadow: inset 2px 2px 5px #13132b;
    }

    .stat-label {
        font-size: 0.8em;
        color: #a8a8a8;
        margin-bottom: 5px;
    }

    .stat-value {
        font-size: 1.2em;
        font-weight: bold;
    }

    .btn-close {
        filter: invert(1) grayscale(100%) brightness(200%);
    }

    .modal-header {
        border-bottom: none;
    }
</style>


